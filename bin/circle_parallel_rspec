#!/bin/bash

i=0
files=()

BLACK="\033[30m"
RED="\033[31m"
GREEN="\033[32m"
YELLOW="\033[33m"
BLUE="\033[34m"
PINK="\033[35m"
CYAN="\033[36m"
WHITE="\033[37m"
NORMAL="\033[0;39m"

JOBS=${CIRCLE_NODE_TOTAL:-1}
JOB_NUMBER=${CIRCLE_NODE_INDEX:-0}

for file in $(find ./spec -name "*_spec.rb" | sort)
do
  if [ $(($i % $JOBS)) -eq $JOB_NUMBER ]
  then
    files+=" $file"
  fi
  ((i++))
done

echo -e "${GREEN}Parallel running $((${JOB_NUMBER} + 1)) of ${JOBS} ${NORMAL}"
echo "bundle exec rspec $@ ${files[@]}"
exec bundle exec rspec $@ ${files[@]}
